doctype html
head
	title Создание нового объявления
	include depending.jade
body
	.container
		include bottum_for_header.jade
		include header.jade
		include mixin_er.jade
		+err(errors)
		form(role="form", action="/confirm", method="post")
			div.form-group
				.row
					.col-lg-2
						Название объявления
						sup *
					.col-lg-5
						input#announcementsName.form-control(type="text", value="#{goods.title}", name="title")
			div.form-group
				.row
					.col-lg-2
						Описание объявления
						sup *
					.col-lg-5
						textarea#announcementsDescription.form-control(type="text", value="#{goods.description}", name="description")
			div.form-group
				.row
					.col-lg-2
						Цена
						sup *
					.col-lg-2
						input#PriceForHour.form-control(type="text", value="#{goods.pricePerHour}", name="pricePerHour")
					.col-lg-1
						час
					.col-lg-2
						input#PriceForDay.form-control(type="text", value="#{goods.pricePerDay}", name="pricePerDay")
					.col-lg-1
						день
					.col-lg-2
						input#PriceForWeek.form-control(type="text", value="#{goods.pricePerWeek}", name="pricePerWeek")
					.col-lg-1
						неделя
			div.form-group
				.row
					.col-lg-2
						Залог
						sup*
					.col-lg-2
						input#pledge.form-control(type="text", value="#{goods.pledge}", name='pledge')
				.row
					.col-lg-6
					.col-lg-3
						a(href="/")
							button.btn.btn-color.btn-block(type="button") Отмена
					.col-lg-3
						button.btn.btn-color.btn-block(type="submit") Подать объявление
