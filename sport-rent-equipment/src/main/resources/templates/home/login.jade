doctype html
html
	head
		title Авторизация
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		link(rel='shortcut icon', href='resources/images/favicon.ico', type='image/x-icon')
		link(rel='icon', href='resources/images/favicon.ico', type='image/x-icon')
		link(rel="stylesheet", href="resources/reset.css", type="text/css", media="all")
		link(rel="stylesheet", href="resources/normalize.css", type="text/css", media="all")
		link(href='http://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		link(rel="stylesheet", href="resources/style/registration-authorization/registration-authorization.css", type="text/css", media="all")
		link(rel="stylesheet", href="resources/style/registration-authorization/login.css", type="text/css", media="all")
		link(rel="stylesheet", href="resources/layout.css", type="text/css", media="all")
		link(rel="stylesheet", href="resources/error.css", type="text/css", media="all")
	body
		.my-container
			.my-header
				.my-center-of-header
					.to-main
						a.local-a-color(href="/")
							b
								p
									< НА ГЛАВНУЮ
			.login-form
				.login-form-logo
					a(href="/")
						img(src="resources/images/logo.png", width="170", height="45", style="margin-top: 12px")
				include mixin_er.jade
				+err(errors)
				form(role="form", action="/login", method="post")
					input.input-email#userEmail.form-control(type="email", name='username',placeholder="E-MAIL")
					input.input-password#passtext.form-control(type="password", name='password',placeholder="ПАРОЛЬ")
					.forgot-pass-text
						a.registration-a-color(href="/")
							p
								Забыли пароль?
					input.button-registration(type='submit', value='ВОЙТИ')
					.registration-text
						text
							Еще не зарегистрированы?
							a.registration-a-color(href="/registration",style="padding-left: 3px;")
								text
									Регистрация.
