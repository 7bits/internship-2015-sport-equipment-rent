doctype html
head
	title Обявление
	meta(charset='utf-8')
	meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
	link(rel="stylesheet", href="resources/style/personal-area/personal-area.css", type="text/css", media="all")
	link(href='http://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
body
	.container
		.header.shadow
			.center-of-header
				.base
					.order
						.logo
							a(href="/")
								img(src="resources/images/logo.png", width="170", height="45", style="margin-top: 12px")
						if (!isAuth)
							.profile
								a.green-color(href="/login")
									h4.position ВХОД
						else
							.personal
								a.green-color(href="/personal_area")
									h4.position ЛИЧНЫЙ КАБИНЕТ
							.exit
								a.green-color(href="/logout")
									h4.position ВЫЙТИ
		.content
			.base
				.order
					.photo-info
						.ava-white-block.round-border.shadow
							img.round.ava(src=user.imageUrl, height="120", width="120")
						.personal-info
							.blue-line-info.blue-line-shadow
								.base
									.order
										.your-info-title-block
											b
												p
													Ваши данные
										.your-info-ico-block
											a(href="/update_profile")
											img(src="resources/style/personal-area/images/info-icon.png", width="17", height="17")
							.your-info-name-block
								p=user.firstName
							.your-info-line
							.your-info-name-block
								p=user.phone
							.your-info-line
					.white-content
						.blue-line.blue-line-shadow
							.header-info-block
								.your-info-title-block-content
									p
										b
											Ваши объявления
						include mixin_users_announcement_list.jade
						.announcement-list
							+list(goods)