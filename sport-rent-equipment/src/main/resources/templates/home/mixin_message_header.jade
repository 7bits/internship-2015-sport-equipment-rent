mixin create-header()
	.header
		.center-of-header
			.base
				.order
					.logo
						a(href="/")
							img(src="resources/images/logo.png", width="170", height="45", style="margin-top: 12px")
					.exit
						a.header-a-color(href="/logout")
							b
								p
									ВЫХОД
					.to-personal-area
						a.header-a-color(href="/personal_area")
							b
								p
									ЛИЧНЫЙ КАБИНЕТ
