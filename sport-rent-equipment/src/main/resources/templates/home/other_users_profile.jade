doctype html
head
	title Обявление
	meta(charset='utf-8')
	meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
	link(rel="stylesheet", href="resources/style/profile/profile.css", type="text/css", media="all")
	link(href='http://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
body
	.container
		.header.shadow
			.center-of-header
				.base
					.order
						.logo
							a(href="/")
								img(src="resources/images/logo.png", width="170", height="45", style="margin-top: 12px")
						if (!isAuth)
							.profile
								a.green-color(href="/login")
									h4.position ВХОД
						else
							.personal
								a.green-color(href="/personal_area")
									h4.position ЛИЧНЫЙ КАБИНЕТ
							.exit
								a.green-color(href="/logout")
									h4.position ВЫЙТИ
		.content
			.base
				.order
					.personal-info.shadow
						.ava-white-block.round-border.shadow
							img.round.ava(src=user.imageUrl, height="120", width="120")
						.line
							hr
						.author-name
							p.text-position=user.firstName
					.white-content
						.blue-line.blue-line-shadow
							.header-info-block
								.base
									.order
										.text-block-1
											p.text-center
												b
													Объявления
						include mixin_users_announcement_list.jade
						.announcement-list
							+list(goods)