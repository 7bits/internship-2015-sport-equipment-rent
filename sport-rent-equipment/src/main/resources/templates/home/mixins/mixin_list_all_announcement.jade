mixin list(goods)
	.list-content
		.list-content-inside
			a(name="seeAll")
				each Goods in goods
					- announcement_id = Goods.id;
					a(href="/see_announcement?announcement_id=#{announcement_id}")
						.list-content-inside-one-position
							.list-block-separate-line
							.list-block
								.base
									.order
										.info-block
											.announcement-title
												.base
													.order
														.announcement-title-text
															b
																p=Goods.title
														if (!goods.status)
															.status-text
																p
																	К аренде готов!
															.status-ico
																img(src="resources/images/ready-ico.png", width="22", height="22")
														else
															.status-text
																p
																	Уже арендован.
															.status-ico
																img(src="resources/images/not-ready-ico.png", width="22", height="22")
											.announcement-discription
												p=Goods.description
											.price-block
												.base
													.order
														.price-block-hour
															text(style="padding-right: 4px;")
																Час:
															b
																text(style="padding-right: 2px;")=Goods.pricePerHour
																text
																	р
														.price-block-day
															text(style="padding-right: 4px;")
																Сутки:
															b
																text(style="padding-right: 2px;")=Goods.pricePerDay
																text
																	р
														.price-block-week
															text(style="padding-right: 4px;")
																Неделя:
															b
																text(style="padding-right: 4px;")=Goods.pricePerWeek
																text
																	р
										.photo-block
											each image in Goods.imageUrl
												.photo-inventory
													if image=="resources/images/photo-ico.png"
														.one-foto-box-ico
															img(src=image, width="42", height="42")
													else
														.one-foto-box-photo
															img(src=image)
							a(href="/profile?user_id=#{Goods.authorId}")
								.avatar-border
									.avatar-photo
										img(src=Goods.authorImage, width="52", height="52")
							.list-block-separate-end-line