mixin list(goods)
	.list-content
		.list-content-inside
			a(name="seeAll")
				each Goods in goods
					- announcement_id = Goods.id;
					a(href="/see_announcement?announcement_id=#{announcement_id}")
						.list-content-inside-one-position
							.list-block-separate-line
							.list-block
								.base
									.order
										.info-block
											.announcement-title
												.base
													.order
														.announcement-title-text
															b
																p=Goods.title
														.ready-to-rent-text
															p
																К аренде готов!
														.ready-to-rent-ico
															img(src="resources/style/main/image/ready-ico.png", width="22", height="22")
											.announcement-discription
												p=Goods.description
											.price-block
												.base
													.order
														.price-block-hour
															text(style="padding-right: 4px;")
																Час:
															b
																text(style="padding-right: 2px;")=Goods.pricePerHour
																text
																	р
														.price-block-day
															text(style="padding-right: 4px;")
																Сутки:
															b
																text(style="padding-right: 2px;")=Goods.pricePerDay
																text
																	р
														.price-block-week
															text(style="padding-right: 4px;")
																Неделя:
															b
																text(style="padding-right: 4px;")=Goods.pricePerWeek
																text
																	р
										.photo-block
											.photo-inventory
												each image in Goods.imageUrl
													img(src=image, height = '147', width = '147')
							.avatar-border
								.avatar-photo
									img(src=Goods.authorImage, width="52", height="52")
							.list-block-separate-end-line