doctype html
head
	title Регистрация
	include depending.jade
body
	.container
		include header.jade
		.row
			.col-lg-2
			.col-lg-9
				h1.b Регистрация
		.row
			.col-lg-12
				include mixin_er.jade
				+err(errors)
				form(role="form", action="/registration", method="post")
					div.form-group
						.row
							.col-lg-2
							.col-lg-3
								label.label-position(for="name") Имя
								sup  *
							.col-lg-4
								input#name.form-control(type="text", name='firstName')
					div.form-group
						.row
							.col-lg-2
							.col-lg-3
								label.label-position(for="userEmail") Email
								sup  *
							.col-lg-4
								input#userEmail.form-control(type="email", name='eMail')
					div.form-group
						.row
							.col-lg-2
							.col-lg-3
								label.label-position(for="passtext") Пароль
								sup  *
							.col-lg-2
								input#passtext.form-control(type="password", name='password')
					div.form-group
						.row
							.col-lg-2
							.col-lg-3
								label.label-position(for="passSecond") Подтверждение пароля
								sup  *
							.col-lg-2
								input#passSecond.form-control(type="password", name='passSecond')
					.row
						.col-lg-7
						.col-lg-3
							button.btn.btn-color.btn-block(type="submit") Зарегистрироваться