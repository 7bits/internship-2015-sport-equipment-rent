mixin create-header()
    .b-header
        .b-header-content
            .base
                .order
                    .b-logo
                        a(href="/")
                            img(src="resources/images/layout/logo.png", width="170", height="45", style="margin-top: 12px")
                    .b-header__exit
                        a.header-a-color(href="/logout")
                            b
                                p
                                    ВЫХОД
                    .b-header__to-personal-area
                        a.header-a-color(href="/personal__area")
                            b
                                p
                                    ЛИЧНЫЙ КАБИНЕТ
