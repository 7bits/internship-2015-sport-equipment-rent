.b-header
    .b-header__header
        .b-header__content
            .base
                .order
                    .b-logo
                        a(href="/")
                            img(src="resources/images/layout/logo.png", width="200", height="50", style="margin-top: 12px")
                    if (!isAuth)
                        .b-header__login
                            a.header-a-color(href="/login")
                                b
                                    p
                                        ВОЙТИ
                    else
                        .b-header__exit
                            a.header-a-color(href="/logout")
                                b
                                    p
                                        ВЫХОД
                        .b-header__to-personal-area
                            a.header-a-color(href="/personal_area")
                                b
                                    p
                                        ЛИЧНЫЙ КАБИНЕТ
                        .b-header__give-announcement
                            a.header-a-color(href="/add")
                                b
                                    p
                                        ДАТЬ ОБЪЯВЛЕНИЕ
                        .b-header__dropdown-menu-ico.js-dropdown-ico
                            h1
                                img(src="resources/images/layout/menu.png", width="25", height="15")
    .b-header__dropdown-menu.js-dropdown-menu
            ul
                li
                    a.header-a-color(href="/add") 
                        p 
                            ДАТЬ ОБЪЯВЛЕНИЕ
                li 
                    a.header-a-color(href="/personal_area")
                        p 
                            ЛИЧНЫЙ КАБИНЕТ
                li
                    a.header-a-color(href="/logout") 
                        p 
                            ВЫХОД

