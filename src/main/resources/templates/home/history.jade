extends layout.jade
block title
    title История сделок
block depending
    link(rel="stylesheet", href="resources/blocks/history.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/user-info.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/title.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/status.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/history-link.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/title-with-devision.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/user-list-announcements.css", type="text/css", media="all")
block content
    .b-content
        include mixins/mixin_user_info.jade
        +create-user-info(true)
        if goods
            .b-user-list-announcements
                .b-user-list-announcements__content
                    .b-title--default.b-title--blue.b-title--padding-none
                        .b-title-with-devision__text
                            b
                                p
                                    История аренды
                        .b-title-with-devision__text.b-title-with-devision__text--right
                            a.a-history(href="/history")
                                p
                                    Объявления
                        .b-title-with-devision__devide-line.b-title-with-devision__devide-line--right
                    each Goods in goods
                        - userId = Goods.authorId;
                        - userAva = Goods.authorImage;
                        +list(Goods, userId, userAva, "Арендодатель", true)
        else
            .b-history--empty
                p
                    Здесь могла бы быть история ваших сделок        