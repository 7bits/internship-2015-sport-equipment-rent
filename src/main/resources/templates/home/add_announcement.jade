extends layout.jade
block title
    title Добавить объявление
block depending
    link(rel="stylesheet", href="resources/blocks/form-crud-annoncement.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/error.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/title.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/buttons.css", type="text/css", media="all")
    link(rel="stylesheet", href="resources/blocks/input.css", type="text/css", media="all")
block scripts
    //- скрипт скрывает в момент загрузки страницы значки удаления с дефолтных изображений 
    //- должен подгружаться тут
    script(src='resources/scripts/add-update-confirm-announcement/add-announcement-hide-delete-ico.js')
block header
    include mixins/mixin_message_header.jade
    +create-header()
block content
    form(role="form", action="/add", method="post", enctype="multipart/form-data")
        include mixins/mixin_form_add_announcement.jade
        .b-form-crud-announcement__button
            input.b-button--default.b-button--yellow(type='submit', value='РАЗМЕСТИТЬ')
block dynamic-scripts
    script(src='resources/scripts/add-update-confirm-announcement/add-photo.js')    