doctype html
html
    head
        block title
            title Дай погонять
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        include mixins/mixin_favicon.jade
        link(rel="stylesheet", href="resources/library/reset.css", type="text/css", media="all")
        link(rel="stylesheet", href="resources/library/normalize.css", type="text/css", media="all")
        link(href='http://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
        link(rel="stylesheet", href=assets.getVersionedResourceUrl("resources/build/bundle#version.css"), type="text/css", media="all")
    body
        .b-index-container
            include mixins/mixin_header.jade
            if(!isAuth)
                .b-lending-element__base-color
                    .b-lending-element__background-image
                        .b-lending-element__name-service
                            p
                                Дай погонять
                        .b-lending-element__motto
                            p
                                Сервис по поиску и аренде спортивного оборудования
                        .b-lending-element__button-content
                            a(href="/add")
                                button.b-lending-element__button-add-announcement(type='button')
                                    b
                                        p
                                            ДАТЬ ОБЪЯВЛЕНИЕ
                                a(href="/#seeAll")
                                    button.b-lending-element__button-see-announcement(type='button')
                                        b
                                            p
                                                ВСЕ ОБЪЯВЛЕНИЯ
            include mixins/mixin_list_all_announcement.jade
            .b-content
                a(name="seeAll")
                    .b-list-announcements
                        each Goods in goods
                            - userId = Goods.authorId;
                            - userAva = Goods.authorImage;
                            +list(Goods, userId, userAva, "Редактировать", false)
        block scripts
            script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
            script(src='resources/scripts/header.js')
            script(src='resources/scripts/cut-text.js')
            script(src="resources/vendor/scripts/cut-text/dotdotdot.js")
