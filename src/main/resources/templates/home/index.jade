doctype html
html
    head
        block title
            title Дай погонять
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        include mixins/mixin_favicon.jade
        link(rel="stylesheet", href="resources/library/reset.css", type="text/css", media="all")
        link(rel="stylesheet", href="resources/library/normalize.css", type="text/css", media="all")
        link(href='http://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
        link(rel="stylesheet", href=assets.getVersionedResourceUrl("resources/build/bundle#version.css"), type="text/css", media="all")
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
        script(src='resources/scripts/header.js')
        script(src='resources/scripts/cut-text.js')
        script(src="resources/vendor/scripts/cut-text/dotdotdot.js")
    body
        .b-index-container
            include mixins/mixin_header.jade
            if(!isAuth)
                .b-greeting-new-user__base-color
                    .b-greeting-new-user__background-image
                        .b-greeting-new-user__name-service
                            p
                                Дай погонять
                        .b-greeting-new-user__motto
                            p
                                Сервис по поиску и аренде спортивного оборудования
                        .b-greeting-new-user__button-content
                            a(href="/add")
                                button.b-button-add-announcement(type='button')
                                    b
                                        p
                                            ДАТЬ ОБЪЯВЛЕНИЕ
                                a(href="/#seeAll")
                                    button.b-button-see-announcement(type='button')
                                        b
                                            p
                                                ВСЕ ОБЪЯВЛЕНИЯ
            include mixins/mixin_list_all_announcement.jade
            +list(goods)
