doctype html
html
	head
		block title
			title Дай погонять
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		link(rel='shortcut icon', href='resources/images/favicon/favicon-16.png', type='image/x-icon')
		link(rel='icon', href='resources/images/favicon/favicon-32.png', type='image/x-icon')
		link(rel='shortcut icon', href='resources/favicon/images/favicon-16.ico', type='image/x-icon')
		link(rel='icon', href='resources/images/favicon/favicon-32.ico', type='image/x-icon')
		link(rel="stylesheet", href="resources/library/reset.css", type="text/css", media="all")
		link(rel="stylesheet", href="resources/library/normalize.css", type="text/css", media="all")
		link(href='http://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
		link(rel="stylesheet", href="resources/pages/index/index.css", type="text/css", media="all")
		link(rel="stylesheet", href="resources/blocks/header.css", type="text/css", media="all")
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		//- скрипт подгоняет добавленнные поль-лем изображения с сохранением пропорций под блок
		//- должен подгружаться тут
		script(src='resources/pages/index/image-photo-script.js')
		script(type="text/javascript", language="javascript", src="resources/scripts/jquery.dropdownPlain.js")
	body
		.container
			.b-header
				.b-header-content
					.base
						.order
							.b-logo
								a(href="/")
									img(src="resources/images/layout/logo.png", width="170", height="45", style="margin-top: 12px")
							if (!isAuth)
								.b-header_login
									a.header-a-color(href="/login")
										b
											p
												ВХОД
							else
								.b-header_exit
									a.header-a-color(href="/logout")
										b
											p
												ВЫХОД
								.b-header_to-personal-area
									a.header-a-color(href="/personal_area")
										b
											p
												ЛИЧНЫЙ КАБИНЕТ
								.b-header_give-announcement
									a.header-a-color(href="/add")
										b
											p
												ДАТЬ ОБЪЯВЛЕНИЕ
			if(!isAuth)
				.name-service-and-motto-block-base-color
					.name-service-and-motto-block-background-image
						.name-service
							p.set-font-rounds
								Дай погонять
						.service-motto
							p
								Сервис по поиску и аренде спортивного оборудования
						.name-service-and-motto-block-inside
							a(href="/add")
								button.button-add-announcement(type='button')
									b
										p
											ДАТЬ ОБЪЯВЛЕНИЕ
								a(href="/#seeAll")
									button.button-see-announcement(type='button')
										b
											p
												ВСЕ ОБЪЯВЛЕНИЯ
			include mixins/mixin_list_all_announcement.jade
			+list(goods)
